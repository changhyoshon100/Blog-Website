  crossorigin="anonymous"
></script>
<form action="/compose" method="post" style="margin: 0 10% 0 10%">
  <h1>Compose</h1>
  <div class="form-group">
    <label>Title</label>

    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        name="postTitle"
        id="floatingInput"
      />

      <label>Post</label>

      <textarea
        class="form-control"
        id="floatingTextarea2"
        style="height: 100px"
        name="postBody"
        rows="10"
        cols="30"
      ></textarea>
    </div>
  </div>

  <button type="submit" name="button" value="submit" class="btn btn-primary">
    Publish
  </button>
</form>

